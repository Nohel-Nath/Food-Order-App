<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="87dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewFoodImgMenu"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:background="@drawable/menu7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFoodItemMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imageViewFoodImgMenu"
                app:layout_constraintBottom_toBottomOf="@id/imageViewFoodImgMenu"
                app:layout_constraintStart_toEndOf="@id/imageViewFoodImgMenu"
                android:layout_marginStart="20dp"
                android:text="Food Name"
                android:fontFamily="@font/yeonsung_regular"
                />

            <TextView
                android:id="@+id/tvFoodPriceMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:text="$7"
                android:textSize="22sp"
                android:textColor="#53E88B"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAddToCart"
                android:background="@drawable/addtocartshape"
                android:layout_width="53dp"
                android:layout_height="14dp"
                android:text="Add To Cart"
                android:textAllCaps="false"
                android:fontFamily="@font/yeonsung_regular"
                android:textColor="@color/white"
                android:textSize="6sp"
                app:layout_constraintTop_toBottomOf="@id/tvFoodPriceMenu"
                app:layout_constraintStart_toStartOf="@id/tvFoodPriceMenu"
                app:layout_constraintEnd_toEndOf="@id/tvFoodPriceMenu"
                android:layout_marginTop="10dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>