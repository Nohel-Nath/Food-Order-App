<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Start">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burrgar" />

    <TextView
        android:id="@+id/textViewEnjoyFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        android:textAlignment="center"
        android:fontFamily="@font/yeonsung_regular"
        android:text="Enjoy Restaurant Quality Meals\n at Home"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:textColor="#53E88B"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:background="@drawable/greenbuttongradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewEnjoyFood"
        app:layout_constraintStart_toStartOf="@id/textViewEnjoyFood"
        app:layout_constraintEnd_toEndOf="@id/textViewEnjoyFood"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/textViewDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:textColor="#1FC57A"
        android:textSize="16sp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="Design By\n Nohel Kumar Nath"
        />

</androidx.constraintlayout.widget.ConstraintLayout>