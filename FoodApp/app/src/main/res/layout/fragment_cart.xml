<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CartFragment">

    <TextView
        android:id="@+id/tvCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:fontFamily="@font/yeonsung_regular"
        android:textColor="@color/black"
        android:text="Cart" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="16dp"
        tools:listitem="@layout/cart_item"
        app:layout_constraintTop_toBottomOf="@id/tvCart"
        app:layout_constraintBottom_toTopOf="@id/btProceed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btProceed"
        android:background="@drawable/whitebuttongradient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginBottom="15dp"
        android:text="Proceed"
        android:textAllCaps="false"
        android:fontFamily="@font/yeonsung_regular"
        android:textColor="@color/very_light_malachite_green"
        android:textSize="18sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>