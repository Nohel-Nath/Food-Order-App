<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="103dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="5dp"
        android:layout_marginTop="20dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cartFoodImg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/menu5"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFoodItemCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/yeonsung_regular"
                android:text="Food Name Food Name Food Name Food Name"
                android:textColor="#09051C"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/tvFoodPriceCart"
                app:layout_constraintStart_toEndOf="@id/cartFoodImg"
                app:layout_constraintEnd_toStartOf="@id/btnDec"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/tvFoodPriceCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="$7"
                android:textColor="#53E88B"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cartFoodImg"
                app:layout_constraintTop_toBottomOf="@+id/tvFoodItemCart" />

            <ImageButton
                android:id="@+id/btnDec"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="2dp"
                android:background="@drawable/addtocartshape"
                android:src="@drawable/minus"
                android:layout_marginEnd="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvQuantity"
                app:layout_constraintEnd_toStartOf="@+id/tvQuantity"
                app:layout_constraintTop_toTopOf="@+id/tvQuantity" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@id/btnInc"
                app:layout_constraintBottom_toBottomOf="@id/btnInc"
                app:layout_constraintEnd_toStartOf="@+id/btnInc"
                />

            <ImageButton
                android:id="@+id/btnInc"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginEnd="20dp"
                android:padding="2dp"
                android:background="@drawable/addtocartshape"
                android:src="@drawable/plus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cartFoodImg" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="@+id/btnInc"
                app:layout_constraintTop_toBottomOf="@id/btnInc"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@+id/btnDec"
                app:srcCompat="@drawable/trash" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>