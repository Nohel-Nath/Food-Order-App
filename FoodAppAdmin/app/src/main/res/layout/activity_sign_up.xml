<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo" />

  <TextView
      android:id="@+id/tvWavesOfFood"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/yeonsung_regular"
      android:text="Waves Of Food"
      android:textSize="40sp"
      app:layout_constraintEnd_toEndOf="@id/imageView"
      app:layout_constraintStart_toStartOf="@id/imageView"
      app:layout_constraintTop_toBottomOf="@id/imageView" />

  <TextView
      android:id="@+id/tvSignUpAdmin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:text="Sign Up Here For Your\n Admin Dashboard"
      android:fontFamily="@font/yeonsung_regular"
      android:textColor="@color/very_light_malachite_green"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="@id/tvWavesOfFood"
      app:layout_constraintStart_toStartOf="@id/tvWavesOfFood"
      app:layout_constraintTop_toBottomOf="@id/tvWavesOfFood"
       />

  <TextView
      android:id="@+id/tvChooseLocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvSignUpAdmin"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="20dp"
      app:layout_constraintHorizontal_bias="0"
      android:text="Choose Your Location"
      android:textSize="14sp"
      android:fontFamily="@font/yeonsung_regular"
      android:textColor="#53E88B"
      />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/tvLocationBox"
      android:layout_width="match_parent"
      android:layout_height="57dp"
      style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
      android:background="@drawable/edittextshape"
      app:endIconDrawable="@drawable/arrow_down"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginHorizontal="20dp"
      app:boxStrokeWidth="0dp"
      app:boxStrokeWidthFocused="0dp"
      app:endIconTint="@color/black"
      app:layout_constraintTop_toBottomOf="@id/tvChooseLocation"
      android:layout_marginTop="10dp"
      >
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listOfLocation"
        android:text="Choose Location"
        android:fontFamily="@font/lato_regular"/>
  </com.google.android.material.textfield.TextInputLayout>

  <EditText
      android:id="@+id/etName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/edittextshape"
      android:drawableLeft="@drawable/usernew"
      android:drawablePadding="15dp"
      android:elevation="5dp"
      android:hint="Name of Owner"
      android:minHeight="48dp"
      android:paddingLeft="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvLocationBox" />

  <EditText
      android:id="@+id/etRestaurant"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="15dp"
      android:background="@drawable/edittextshape"
      android:drawableLeft="@drawable/home"
      android:drawablePadding="15dp"
      android:elevation="5dp"
      android:hint="Name of Restaurant"
      android:minHeight="48dp"
      android:paddingLeft="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/etName" />

  <EditText
      android:id="@+id/etEmail"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:elevation="5dp"
      android:layout_marginTop="15dp"
      android:drawableLeft="@drawable/mail"
      android:drawablePadding="15dp"
      android:background="@drawable/edittextshape"
      android:hint="Email or Phone Number"
      android:minHeight="48dp"
      android:inputType="textEmailAddress"
      android:paddingLeft="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/etRestaurant" />

  <EditText
      android:id="@+id/etPassword"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:elevation="5dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="6dp"
      android:drawableLeft="@drawable/lock"
      android:drawablePadding="15dp"
      android:inputType="textPassword"
      android:hint="Password"
      android:background="@drawable/edittextshape"
      android:minHeight="48dp"
      android:paddingLeft="15dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/etEmail" />

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btnCreateAccount"
      android:background="@drawable/greenbuttongradient"
      android:layout_width="157dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/etPassword"
      app:layout_constraintStart_toStartOf="@id/etPassword"
      app:layout_constraintEnd_toEndOf="@id/etPassword"
      android:text="Create Account"
      android:textAllCaps="false"
      android:fontFamily="@font/yeonsung_regular"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:layout_marginTop="20dp"
      />

  <TextView
      android:id="@+id/tvAlreadyAccount"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginBottom="45dp"
      android:textAlignment="center"
      android:textColor="#1FC57A"
      android:textSize="16sp"
      android:text="Already Have An Account?"
      android:fontFamily="@font/yeonsung_regular"
      />

  </androidx.constraintlayout.widget.ConstraintLayout>