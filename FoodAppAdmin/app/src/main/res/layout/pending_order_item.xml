<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cartFoodImg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/menu5"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/yeonsung_regular"
                android:text="Name Customer"
                android:textColor="#09051C"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/tvQuantity"
                app:layout_constraintStart_toEndOf="@id/cartFoodImg"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/yeonsung_regular"
                android:text="Total Pay"
                android:textColor="#09051C"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/cartFoodImg"
                app:layout_constraintTop_toBottomOf="@+id/tvCustomerName" />
            
            <TextView
                android:id="@+id/tvQuantityNum"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                app:layout_constraintTop_toTopOf="@id/tvQuantity"
                app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
                android:text="2"
                android:gravity="center"
                android:textColor="#53E88B"
                android:fontFamily="@font/lato_regular"
                app:layout_constraintStart_toEndOf="@id/tvQuantity"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAccept"
                android:background="@drawable/pendingordergradient"
                android:layout_width="81dp"
                android:layout_height="26dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvCustomerName"
                app:layout_constraintBottom_toBottomOf="@id/tvQuantity"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:text="Accept"
                android:textAllCaps="false"
                android:fontFamily="@font/yeonsung_regular"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>