<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".PendingOrderActivity">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_left"
        />

    <TextView
        android:id="@+id/pending_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Pending Orders"
        android:textColor="#000000"
        android:textSize="40sp"
        android:fontFamily="@font/yeonsung_regular"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pendingOrderRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        tools:listitem="@layout/pending_order_item"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/pending_order"
        app:layout_constraintBottom_toTopOf="@id/textViewDesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textColor="#1FC57A"
        android:textSize="16sp"
        android:text="Design By\n Nohel Kumar Nath"
        android:fontFamily="@font/yeonsung_regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>